{
	"version": "1.0.0",
	"canvas": "draft-management.otel.canvas",
	"mode": "span-tree",
	"name": "Draft View",
	"description": "Viewing draft details",
	"scenarios": [
		{
			"id": "view-success",
			"priority": 1,
			"condition": {
				"requires": ["draft.view.complete"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "âœ… Viewed draft {draftId} (completed in {duration.ms}ms)",
				"events": {
					"draft.view.started": "Viewing draft {{draftId}}",
					"draft.view.loaded": "Loaded draft from {{source}}",
					"draft.view.complete": "View complete in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "view-not-found",
			"priority": 2,
			"condition": {
				"requires": ["draft.error"],
				"assertions": {
					"operation": "view",
					"error.type": "DraftNotFound"
				}
			},
			"template": {
				"summary": "âŒ Draft {draftId} not found",
				"events": {
					"draft.view.started": "Viewing draft {{draftId}}",
					"draft.error": "Draft not found: {{error.message}}"
				}
			}
		},
		{
			"id": "view-error",
			"priority": 3,
			"condition": {
				"requires": ["draft.error"],
				"assertions": {
					"operation": "view"
				}
			},
			"template": {
				"summary": "âŒ Failed to view draft {draftId}: {error.message}",
				"events": {
					"draft.view.started": "Viewing draft {{draftId}}",
					"draft.error": "Error: {{error.message}}"
				}
			}
		},
		{
			"id": "fallback",
			"priority": 999,
			"condition": {
				"default": true
			},
			"template": {
				"summary": "ğŸ“‹ Draft view execution captured",
				"events": {
					"draft.view.started": "View started",
					"draft.view.loaded": "Draft loaded",
					"draft.view.complete": "View complete",
					"draft.error": "Error occurred"
				}
			}
		}
	]
}
