{
	"version": "1.0.0",
	"canvas": ".principal-views/decision-management/decision-management.otel.canvas",
	"mode": "span-tree",
	"name": "Decision Create",
	"description": "Creating a new ADR (Architecture Decision Record)",
	"scenarios": [
		{
			"id": "create-success-with-commit",
			"priority": 1,
			"condition": {
				"requires": ["decision.create.complete", "decision.create.committed"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "‚úÖ Created decision {decisionId} and committed to git (completed in {duration.ms}ms)",
				"events": {
					"decision.create.started": "Creating decision (ADR): {{title}}",
					"decision.create.validated": "Generated decision ID: {{normalizedId}}",
					"decision.create.saved": "Saved to {{decisionPath}}",
					"decision.create.committed": "Committed: {{commitMessage}}",
					"decision.create.complete": "Decision created successfully in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "create-success-no-commit",
			"priority": 2,
			"condition": {
				"requires": ["decision.create.complete"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "‚úÖ Created decision {decisionId} (completed in {duration.ms}ms)",
				"events": {
					"decision.create.started": "Creating decision (ADR): {{title}}",
					"decision.create.validated": "Generated decision ID: {{normalizedId}}",
					"decision.create.saved": "Saved to {{decisionPath}}",
					"decision.create.complete": "Decision created successfully in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "create-error",
			"priority": 3,
			"condition": {
				"requires": ["decision.error"],
				"assertions": {
					"operation": "create"
				}
			},
			"template": {
				"summary": "‚ùå Decision creation failed at {error.stage}: {error.message}",
				"events": {
					"decision.create.started": "Creating decision: {{title}}",
					"decision.error": "Failed at {{error.stage}}: {{error.message}}"
				}
			}
		},
		{
			"id": "fallback",
			"priority": 999,
			"condition": {
				"default": true
			},
			"template": {
				"summary": "üìã Decision create execution captured",
				"events": {
					"decision.create.started": "Create operation started",
					"decision.create.validated": "Decision validated",
					"decision.create.saved": "Decision saved",
					"decision.create.committed": "Changes committed",
					"decision.create.complete": "Operation complete",
					"decision.error": "Error occurred"
				}
			}
		}
	]
}
