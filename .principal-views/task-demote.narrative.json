{
	"version": "1.0.0",
	"canvas": "task-management.otel.canvas",
	"mode": "span-tree",
	"name": "Task Demote",
	"description": "Demoting a task back to draft status",
	"scenarios": [
		{
			"id": "demote-success-with-commit",
			"priority": 1,
			"condition": {
				"requires": ["task.demote.complete", "task.demote.committed"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "‚úÖ Demoted task {taskId} to draft and committed (completed in {duration.ms}ms)",
				"events": {
					"task.demote.started": "Demoting task {{taskId}} to draft",
					"task.demote.loaded": "Located task at {{fromPath}}",
					"task.demote.moved": "Moved from {{fromPath}} to {{toPath}}",
					"task.demote.committed": "Committed: {{commitMessage}}",
					"task.demote.complete": "Demotion complete in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "demote-success-no-commit",
			"priority": 2,
			"condition": {
				"requires": ["task.demote.complete"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "‚úÖ Demoted task {taskId} to draft (completed in {duration.ms}ms)",
				"events": {
					"task.demote.started": "Demoting task {{taskId}} to draft",
					"task.demote.loaded": "Located task at {{fromPath}}",
					"task.demote.moved": "Moved from {{fromPath}} to {{toPath}}",
					"task.demote.complete": "Demotion complete in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "demote-not-found",
			"priority": 3,
			"condition": {
				"requires": ["task.error"],
				"assertions": {
					"operation": "demote",
					"error.type": "TaskNotFound"
				}
			},
			"template": {
				"summary": "‚ùå Task {taskId} not found - cannot demote",
				"events": {
					"task.demote.started": "Demoting task {{taskId}}",
					"task.error": "Task not found: {{error.message}}"
				}
			}
		},
		{
			"id": "demote-error",
			"priority": 4,
			"condition": {
				"requires": ["task.error"],
				"assertions": {
					"operation": "demote"
				}
			},
			"template": {
				"summary": "‚ùå Failed to demote task {taskId}: {error.message}",
				"events": {
					"task.demote.started": "Demoting task {{taskId}}",
					"task.error": "Error at {{error.stage}}: {{error.message}}"
				}
			}
		},
		{
			"id": "fallback",
			"priority": 999,
			"condition": {
				"default": true
			},
			"template": {
				"summary": "üìã Task demote execution captured",
				"events": {
					"task.demote.started": "Demotion started",
					"task.demote.loaded": "Task located",
					"task.demote.moved": "File moved",
					"task.demote.committed": "Changes committed",
					"task.demote.complete": "Demotion complete",
					"task.error": "Error occurred"
				}
			}
		}
	]
}
