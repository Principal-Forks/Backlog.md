{
	"version": "1.0.0",
	"canvas": ".principal-views/task-management/task-management.otel.canvas",
	"mode": "span-tree",
	"name": "Task Archive",
	"description": "Archiving a task by moving it to the archive directory",
	"scenarios": [
		{
			"id": "archive-success-with-commit",
			"priority": 1,
			"condition": {
				"requires": ["task.archive.complete", "task.archive.committed"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "‚úÖ Archived task {taskId} and committed to git (completed in {duration.ms}ms)",
				"events": {
					"task.archive.started": "Started archiving task {{taskId}}",
					"task.archive.located": "Located task file at {{taskPath}}",
					"task.archive.moved": "Moved from {{fromPath}} to {{toPath}}",
					"task.archive.committed": "Committed: {{commitMessage}}",
					"task.archive.complete": "Archive completed in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "archive-success-no-commit",
			"priority": 2,
			"condition": {
				"requires": ["task.archive.complete"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "‚úÖ Archived task {taskId} (completed in {duration.ms}ms)",
				"events": {
					"task.archive.started": "Started archiving task {{taskId}}",
					"task.archive.located": "Located task file at {{taskPath}}",
					"task.archive.moved": "Moved from {{fromPath}} to {{toPath}}",
					"task.archive.complete": "Archive completed in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "archive-not-found",
			"priority": 3,
			"condition": {
				"requires": ["task.error"],
				"assertions": {
					"operation": "archive",
					"error.type": "TaskNotFound"
				}
			},
			"template": {
				"summary": "‚ùå Task {taskId} not found - cannot archive",
				"events": {
					"task.archive.started": "Started archiving task {{taskId}}",
					"task.error": "Task not found: {{error.message}}"
				}
			}
		},
		{
			"id": "archive-error",
			"priority": 4,
			"condition": {
				"requires": ["task.error"],
				"assertions": {
					"operation": "archive"
				}
			},
			"template": {
				"summary": "‚ùå Archive failed at {error.stage}: {error.message}",
				"events": {
					"task.archive.started": "Started archiving task {{taskId}}",
					"task.error": "Failed at {{error.stage}}: {{error.message}}"
				}
			}
		},
		{
			"id": "fallback",
			"priority": 999,
			"condition": {
				"default": true
			},
			"template": {
				"summary": "üìã Task archive execution captured",
				"events": {
					"task.archive.started": "Archive operation started",
					"task.archive.located": "Task located",
					"task.archive.moved": "File moved",
					"task.archive.committed": "Changes committed",
					"task.archive.complete": "Operation complete",
					"task.error": "Error occurred"
				}
			}
		}
	]
}
