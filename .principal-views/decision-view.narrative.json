{
	"version": "1.0.0",
	"canvas": "decision-management.otel.canvas",
	"mode": "span-tree",
	"name": "Decision View",
	"description": "Viewing a single decision/ADR by ID",
	"scenarios": [
		{
			"id": "view-success",
			"priority": 1,
			"condition": {
				"requires": ["decision.view.complete"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "‚úÖ Viewed decision {decisionId}",
				"events": {
					"decision.view.started": "Loading decision: {{decisionId}}",
					"decision.view.loaded": "Found at {{decisionPath}}",
					"decision.view.complete": "Decision loaded successfully"
				}
			}
		},
		{
			"id": "view-not-found",
			"priority": 2,
			"condition": {
				"requires": ["decision.error"],
				"assertions": {
					"operation": "view",
					"error.type": "DecisionNotFound"
				}
			},
			"template": {
				"summary": "‚ùå Decision {decisionId} not found",
				"events": {
					"decision.view.started": "Loading decision: {{decisionId}}",
					"decision.error": "Decision not found: {{error.message}}"
				}
			}
		},
		{
			"id": "view-error",
			"priority": 3,
			"condition": {
				"requires": ["decision.error"],
				"assertions": {
					"operation": "view"
				}
			},
			"template": {
				"summary": "‚ùå Decision view failed: {error.message}",
				"events": {
					"decision.view.started": "Loading decision: {{decisionId}}",
					"decision.error": "Failed at {{error.stage}}: {{error.message}}"
				}
			}
		},
		{
			"id": "fallback",
			"priority": 999,
			"condition": {
				"default": true
			},
			"template": {
				"summary": "üìã Decision view execution captured",
				"events": {
					"decision.view.started": "View operation started",
					"decision.view.loaded": "Decision loaded",
					"decision.view.complete": "Operation complete",
					"decision.error": "Error occurred"
				}
			}
		}
	]
}
