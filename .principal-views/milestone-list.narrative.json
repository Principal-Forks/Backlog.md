{
	"version": "1.0.0",
	"canvas": "milestone-management.otel.canvas",
	"mode": "span-tree",
	"name": "Milestone List",
	"description": "Listing milestones",
	"scenarios": [
		{
			"id": "list-success-with-archived",
			"priority": 1,
			"condition": {
				"requires": ["milestone.list.complete"],
				"assertions": {
					"success": true,
					"includeArchived": true
				}
			},
			"template": {
				"summary": "‚úÖ Listed {resultCount} milestones (including {archivedCount} archived, completed in {duration.ms}ms)",
				"events": {
					"milestone.list.started": "Listing all milestones (including archived)",
					"milestone.list.loaded": "Loaded {{totalCount}} milestones ({{archivedCount}} archived)",
					"milestone.list.complete": "List complete in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "list-success",
			"priority": 2,
			"condition": {
				"requires": ["milestone.list.complete"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "‚úÖ Listed {resultCount} milestones (completed in {duration.ms}ms)",
				"events": {
					"milestone.list.started": "Listing milestones",
					"milestone.list.loaded": "Loaded {{totalCount}} milestones",
					"milestone.list.complete": "List complete in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "list-empty",
			"priority": 3,
			"condition": {
				"requires": ["milestone.list.complete"],
				"assertions": {
					"resultCount": 0
				}
			},
			"template": {
				"summary": "‚ÑπÔ∏è No milestones found",
				"events": {
					"milestone.list.started": "Listing milestones",
					"milestone.list.loaded": "No milestones found",
					"milestone.list.complete": "List complete (0 results)"
				}
			}
		},
		{
			"id": "list-error",
			"priority": 4,
			"condition": {
				"requires": ["milestone.error"],
				"assertions": {
					"operation": "list"
				}
			},
			"template": {
				"summary": "‚ùå Failed to list milestones: {error.message}",
				"events": {
					"milestone.list.started": "Listing milestones",
					"milestone.error": "Error: {{error.message}}"
				}
			}
		},
		{
			"id": "fallback",
			"priority": 999,
			"condition": {
				"default": true
			},
			"template": {
				"summary": "üìã Milestone list execution captured",
				"events": {
					"milestone.list.started": "List started",
					"milestone.list.loaded": "Milestones loaded",
					"milestone.list.complete": "List complete",
					"milestone.error": "Error occurred"
				}
			}
		}
	]
}
