{
	"version": "1.0.0",
	"canvas": ".principal-views/document-management/document-management.otel.canvas",
	"mode": "span-tree",
	"name": "Document Search",
	"description": "Full-text search across document content",
	"scenarios": [
		{
			"id": "search-success-with-results",
			"priority": 1,
			"condition": {
				"requires": ["document.search.complete"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "‚úÖ Found {resultCount} documents for query \"{query}\" (completed in {duration.ms}ms)",
				"events": {
					"document.search.started": "Searching documents for: {{query}}{{#if limit}} (limit: {{limit}}){{/if}}",
					"document.search.executed": "Search returned {{resultCount}} results",
					"document.search.complete": "Search completed in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "search-no-results",
			"priority": 2,
			"condition": {
				"requires": ["document.search.complete"],
				"assertions": {
					"success": true,
					"resultCount": 0
				}
			},
			"template": {
				"summary": "‚ö†Ô∏è No documents found for query \"{query}\"",
				"events": {
					"document.search.started": "Searching documents for: {{query}}",
					"document.search.executed": "No results found",
					"document.search.complete": "Search completed with no results"
				}
			}
		},
		{
			"id": "search-error",
			"priority": 3,
			"condition": {
				"requires": ["document.error"],
				"assertions": {
					"operation": "search"
				}
			},
			"template": {
				"summary": "‚ùå Document search failed: {error.message}",
				"events": {
					"document.search.started": "Searching documents for: {{query}}",
					"document.error": "Failed at {{error.stage}}: {{error.message}}"
				}
			}
		},
		{
			"id": "fallback",
			"priority": 999,
			"condition": {
				"default": true
			},
			"template": {
				"summary": "üìã Document search execution captured",
				"events": {
					"document.search.started": "Search operation started",
					"document.search.executed": "Search executed",
					"document.search.complete": "Operation complete",
					"document.error": "Error occurred"
				}
			}
		}
	]
}
