{
	"version": "1.0.0",
	"canvas": ".principal-views/draft-management/draft-management.otel.canvas",
	"mode": "span-tree",
	"name": "Draft Archive",
	"description": "Archiving a draft by moving it to the archive directory",
	"scenarios": [
		{
			"id": "archive-success-with-commit",
			"priority": 1,
			"condition": {
				"requires": ["draft.archive.complete", "draft.archive.committed"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "‚úÖ Archived draft {draftId} and committed to git (completed in {duration.ms}ms)",
				"events": {
					"draft.archive.started": "Started archiving draft {{draftId}}",
					"draft.archive.located": "Located draft file at {{draftPath}}",
					"draft.archive.moved": "Moved from {{fromPath}} to {{toPath}}",
					"draft.archive.committed": "Committed: {{commitMessage}}",
					"draft.archive.complete": "Archive completed in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "archive-success-no-commit",
			"priority": 2,
			"condition": {
				"requires": ["draft.archive.complete"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "‚úÖ Archived draft {draftId} (completed in {duration.ms}ms)",
				"events": {
					"draft.archive.started": "Started archiving draft {{draftId}}",
					"draft.archive.located": "Located draft file at {{draftPath}}",
					"draft.archive.moved": "Moved from {{fromPath}} to {{toPath}}",
					"draft.archive.complete": "Archive completed in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "archive-not-found",
			"priority": 3,
			"condition": {
				"requires": ["draft.error"],
				"assertions": {
					"operation": "archive",
					"error.type": "DraftNotFound"
				}
			},
			"template": {
				"summary": "‚ùå Draft {draftId} not found - cannot archive",
				"events": {
					"draft.archive.started": "Started archiving draft {{draftId}}",
					"draft.error": "Draft not found: {{error.message}}"
				}
			}
		},
		{
			"id": "archive-error",
			"priority": 4,
			"condition": {
				"requires": ["draft.error"],
				"assertions": {
					"operation": "archive"
				}
			},
			"template": {
				"summary": "‚ùå Archive failed at {error.stage}: {error.message}",
				"events": {
					"draft.archive.started": "Started archiving draft {{draftId}}",
					"draft.error": "Failed at {{error.stage}}: {{error.message}}"
				}
			}
		},
		{
			"id": "fallback",
			"priority": 999,
			"condition": {
				"default": true
			},
			"template": {
				"summary": "üìã Draft archive execution captured",
				"events": {
					"draft.archive.started": "Archive operation started",
					"draft.archive.located": "Draft located",
					"draft.archive.moved": "File moved",
					"draft.archive.committed": "Changes committed",
					"draft.archive.complete": "Operation complete",
					"draft.error": "Error occurred"
				}
			}
		}
	]
}
