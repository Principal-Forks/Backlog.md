{
	"version": "1.0.0",
	"canvas": ".principal-views/draft-management/draft-management.otel.canvas",
	"mode": "span-tree",
	"name": "Draft Create",
	"description": "Creating a new draft in the backlog",
	"scenarios": [
		{
			"id": "create-success-with-commit",
			"priority": 1,
			"condition": {
				"requires": ["draft.create.complete", "draft.create.committed"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "âœ… Created draft {draftId} and committed to git (completed in {duration.ms}ms)",
				"events": {
					"draft.create.started": "Creating draft: {{title}}",
					"draft.create.validated": "Generated draft ID: {{normalizedId}}",
					"draft.create.saved": "Saved to {{filepath}}",
					"draft.create.committed": "Committed: {{commitMessage}}",
					"draft.create.complete": "Draft creation complete in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "create-success-no-commit",
			"priority": 2,
			"condition": {
				"requires": ["draft.create.complete"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "âœ… Created draft {draftId} (completed in {duration.ms}ms)",
				"events": {
					"draft.create.started": "Creating draft: {{title}}",
					"draft.create.validated": "Generated draft ID: {{normalizedId}}",
					"draft.create.saved": "Saved to {{filepath}}",
					"draft.create.complete": "Draft creation complete in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "create-error",
			"priority": 3,
			"condition": {
				"requires": ["draft.error"],
				"assertions": {
					"operation": "create"
				}
			},
			"template": {
				"summary": "âŒ Draft creation failed at {error.stage}: {error.message}",
				"events": {
					"draft.create.started": "Started creating draft",
					"draft.error": "Failed at {{error.stage}}: {{error.message}}"
				}
			}
		},
		{
			"id": "fallback",
			"priority": 999,
			"condition": {
				"default": true
			},
			"template": {
				"summary": "ğŸ“‹ Draft create execution captured",
				"events": {
					"draft.create.started": "Creation started",
					"draft.create.validated": "Validated",
					"draft.create.saved": "Saved",
					"draft.create.committed": "Committed",
					"draft.create.complete": "Complete",
					"draft.error": "Error occurred"
				}
			}
		}
	]
}
