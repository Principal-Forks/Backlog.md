{
	"version": "1.0.0",
	"canvas": ".principal-views/milestone-management/milestone-management.otel.canvas",
	"mode": "span-tree",
	"name": "Milestone Archive",
	"description": "Archiving a milestone by moving it to the archive directory",
	"scenarios": [
		{
			"id": "archive-success-with-commit",
			"priority": 1,
			"condition": {
				"requires": ["milestone.archive.complete", "milestone.archive.committed"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "‚úÖ Archived milestone {milestoneId} and committed to git (completed in {duration.ms}ms)",
				"events": {
					"milestone.archive.started": "Started archiving milestone {{identifier}}",
					"milestone.archive.located": "Located milestone: {{milestoneTitle}} at {{milestonePath}}",
					"milestone.archive.moved": "Moved from {{fromPath}} to {{toPath}}",
					"milestone.archive.committed": "Committed: {{commitMessage}}",
					"milestone.archive.complete": "Archive completed in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "archive-success-no-commit",
			"priority": 2,
			"condition": {
				"requires": ["milestone.archive.complete"],
				"assertions": {
					"success": true
				}
			},
			"template": {
				"summary": "‚úÖ Archived milestone {milestoneId} (completed in {duration.ms}ms)",
				"events": {
					"milestone.archive.started": "Started archiving milestone {{identifier}}",
					"milestone.archive.located": "Located milestone: {{milestoneTitle}}",
					"milestone.archive.moved": "Moved from {{fromPath}} to {{toPath}}",
					"milestone.archive.complete": "Archive completed in {{duration.ms}}ms"
				}
			}
		},
		{
			"id": "archive-not-found",
			"priority": 3,
			"condition": {
				"requires": ["milestone.error"],
				"assertions": {
					"operation": "archive",
					"error.type": "MilestoneNotFound"
				}
			},
			"template": {
				"summary": "‚ùå Milestone {identifier} not found - cannot archive",
				"events": {
					"milestone.archive.started": "Started archiving milestone {{identifier}}",
					"milestone.error": "Milestone not found: {{error.message}}"
				}
			}
		},
		{
			"id": "archive-error",
			"priority": 4,
			"condition": {
				"requires": ["milestone.error"],
				"assertions": {
					"operation": "archive"
				}
			},
			"template": {
				"summary": "‚ùå Archive failed at {error.stage}: {error.message}",
				"events": {
					"milestone.archive.started": "Started archiving milestone {{identifier}}",
					"milestone.error": "Failed at {{error.stage}}: {{error.message}}"
				}
			}
		},
		{
			"id": "fallback",
			"priority": 999,
			"condition": {
				"default": true
			},
			"template": {
				"summary": "üìã Milestone archive execution captured",
				"events": {
					"milestone.archive.started": "Archive operation started",
					"milestone.archive.located": "Milestone located",
					"milestone.archive.moved": "File moved",
					"milestone.archive.committed": "Changes committed",
					"milestone.archive.complete": "Operation complete",
					"milestone.error": "Error occurred"
				}
			}
		}
	]
}
